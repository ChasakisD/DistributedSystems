<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/category_header_height">

    <RelativeLayout
        android:id="@+id/category_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tiny_padding"
        android:layout_marginEnd="@dimen/tiny_padding"
        android:layout_marginTop="@dimen/tiny_padding"
        android:minHeight="@dimen/category_header_height">

        <View
            android:id="@+id/box_color_category"
            android:layout_width="@dimen/border_box_width"
            android:layout_height="@dimen/category_header_height"
            android:background="@drawable/upper_rounded_background" />

        <TextView
            android:id="@+id/poi_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/title_font_size"
            tools:text="Restaurants" />

        <ImageView
            android:id="@+id/is_expanded_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/medium_padding"
            android:src="@drawable/ic_keyboard_arrow_down"
            android:tint="@color/primary_light" />
    </RelativeLayout>


</FrameLayout>