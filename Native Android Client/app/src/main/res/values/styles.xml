<resources>
    <style name="MainTheme" parent="MainTheme.Base"/>

    <style name="MainTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="drawerArrowStyle">@style/AppDrawerArrowStyle</item>
    </style>

    <style name="AppDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#F5F5F5</item>
        <item name="spinBars">true</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="MainTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>
</resources>
